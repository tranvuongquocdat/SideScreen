<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="40dp"
    app:cardCornerRadius="28dp"
    app:cardBackgroundColor="#E6000000"
    app:cardElevation="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display Settings"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Show Stats Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/settings_item_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show Stats"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FPS, bitrate, resolution"
                    android:textColor="#999999"
                    android:textSize="13sp" />
            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/showStatsSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:thumbTint="@color/switch_thumb_color"
                app:trackTint="@color/switch_track_color" />
        </LinearLayout>

        <!-- Opacity Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_item_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overlay Opacity"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/opacityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80%"
                android:textColor="#4CAF50"
                android:textSize="15sp"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.slider.Slider
                android:id="@+id/opacitySlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:valueFrom="0.2"
                android:valueTo="1.0"
                android:value="0.8"
                android:stepSize="0.05"
                app:thumbColor="#FFFFFF"
                app:trackColorActive="#4CAF50"
                app:trackColorInactive="#33FFFFFF"
                app:trackHeight="4dp" />
        </LinearLayout>

        <!-- Settings Button Position - 8 directions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/settings_item_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings Button Position"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <!-- 8 Position Grid (3x3 without center) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Top Row: TopLeft, TopCenter, TopRight -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cornerTopLeft"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="↖"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:layout_marginEnd="3dp"
                        app:cornerRadius="10dp"
                        app:strokeColor="#4CAF50"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/positionTopCenter"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="↑"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        app:cornerRadius="10dp"
                        app:strokeColor="#4CAF50"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cornerTopRight"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="↗"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:layout_marginStart="3dp"
                        app:cornerRadius="10dp"
                        app:strokeColor="#4CAF50"
                        app:strokeWidth="1dp" />
                </LinearLayout>

                <!-- Middle Row: Left, (empty center), Right -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="6dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/positionCenterLeft"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="←"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:layout_marginEnd="3dp"
                        app:cornerRadius="10dp"
                        app:strokeColor="#4CAF50"
                        app:strokeWidth="1dp" />

                    <!-- Empty center space -->
                    <View
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/positionCenterRight"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="→"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:layout_marginStart="3dp"
                        app:cornerRadius="10dp"
                        app:strokeColor="#4CAF50"
                        app:strokeWidth="1dp" />
                </LinearLayout>

                <!-- Bottom Row: BottomLeft, BottomCenter, BottomRight -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cornerBottomLeft"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="↙"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:layout_marginEnd="3dp"
                        app:cornerRadius="10dp"
                        app:strokeColor="#4CAF50"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/positionBottomCenter"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="↓"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        app:cornerRadius="10dp"
                        app:strokeColor="#4CAF50"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/cornerBottomRight"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="↘"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:layout_marginStart="3dp"
                        app:cornerRadius="10dp"
                        app:strokeColor="#4CAF50"
                        app:strokeWidth="1dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <!-- Reset Overlay Position Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/resetPositionButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Reset Overlay"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="4dp"
                app:cornerRadius="14dp"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp"
                app:backgroundTint="#1AFFFFFF" />

            <!-- Reset Settings Button Position -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/resetSettingsButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Reset Button"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                app:cornerRadius="14dp"
                app:strokeColor="#33FFFFFF"
                app:strokeWidth="1dp"
                app:backgroundTint="#1AFFFFFF" />
        </LinearLayout>

        <!-- Disconnect Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/disconnectSettingsButton"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Disconnect"
            android:textColor="#F44336"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            app:cornerRadius="14dp"
            app:strokeColor="#F44336"
            app:strokeWidth="1dp"
            app:backgroundTint="#1AF44336" />

        <!-- Close Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/closeButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="DONE"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:cornerRadius="16dp"
            app:backgroundTint="#4CAF50" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
