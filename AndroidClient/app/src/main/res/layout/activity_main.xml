<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Video Surface -->
    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Modern Floating Status Bar (Top) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:elevation="8dp"
        android:visibility="gone"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="#CC000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <!-- FPS Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FPS"
                    android:textColor="#88FFFFFF"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/fpsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#4CAF50"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Bitrate Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BITRATE"
                    android:textColor="#88FFFFFF"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/bitrateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#2196F3"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Resolution Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RESOLUTION"
                    android:textColor="#88FFFFFF"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/resolutionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#FF9800"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- RTT Latency Indicator -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RTT"
                    android:textColor="#88FFFFFF"
                    android:textSize="10sp" />
                <TextView
                    android:id="@+id/latencyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textColor="#E91E63"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Settings Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/settingsButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="24dp"
        android:elevation="8dp"
        android:visibility="gone"
        app:cardCornerRadius="28dp"
        app:cardBackgroundColor="#CC000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_settings"
            android:tint="#FFFFFF" />
    </androidx.cardview.widget.CardView>

    <!-- Modern Connection Panel -->
    <androidx.cardview.widget.CardView
        android:id="@+id/settingsPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:elevation="24dp"
        app:cardCornerRadius="32dp"
        app:cardBackgroundColor="#E6000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40dp">

            <!-- Icon -->
            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/connection_icon_bg"
                android:layout_marginBottom="24dp" />

            <!-- Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Side Screen"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:letterSpacing="-0.01"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Turn your tablet into a second display"
                android:textColor="#999999"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Connection Checklist -->
            <LinearLayout
                android:id="@+id/checklistContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/instruction_bg"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Connection Checklist"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Developer Mode Check -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    <View
                        android:id="@+id/checkDeveloperMode"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/status_indicator_red"
                        android:layout_marginEnd="10dp" />
                    <TextView
                        android:id="@+id/textDeveloperMode"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Developer Mode enabled"
                        android:textColor="#BBBBBB"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- USB Debugging Check -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    <View
                        android:id="@+id/checkUsbDebugging"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/status_indicator_red"
                        android:layout_marginEnd="10dp" />
                    <TextView
                        android:id="@+id/textUsbDebugging"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="USB Debugging enabled"
                        android:textColor="#BBBBBB"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- USB Connected Check -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    <View
                        android:id="@+id/checkUsbConnected"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/status_indicator_red"
                        android:layout_marginEnd="10dp" />
                    <TextView
                        android:id="@+id/textUsbConnected"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="USB cable connected"
                        android:textColor="#BBBBBB"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Mac Server Check -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <View
                        android:id="@+id/checkMacServer"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/status_indicator_red"
                        android:layout_marginEnd="10dp" />
                    <TextView
                        android:id="@+id/textMacServer"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Mac server running"
                        android:textColor="#BBBBBB"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- Connect Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/connectButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="Connect"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:backgroundTint="#007AFF"
                android:layout_marginBottom="20dp" />

            <!-- Status Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <View
                    android:id="@+id/statusIndicator"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/status_indicator"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ready to connect"
                    android:textColor="#AAAAAA"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Advanced Settings (collapsed by default) -->
            <LinearLayout
                android:id="@+id/advancedSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#FFFFFF"
                    app:hintTextColor="#AAAAAA"
                    android:layout_marginBottom="12dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/hostInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Host"
                        android:text="127.0.0.1"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#888888"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxStrokeColor="#FFFFFF"
                    app:hintTextColor="#AAAAAA">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/portInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Port"
                        android:text="8888"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#888888"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Show Advanced link -->
            <TextView
                android:id="@+id/showAdvanced"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Advanced Settings"
                android:textColor="#007AFF"
                android:textSize="13sp"
                android:gravity="center"
                android:padding="8dp" />

            <!-- Hidden disconnect button reference (needed by code) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/disconnectButton"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Hidden log text (needed by code) -->
    <TextView
        android:id="@+id/logText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
